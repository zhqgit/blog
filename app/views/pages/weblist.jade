extends ../layout

block content
	.weblist-container
		.weblist-title 
			h3 /前端
		.weblist-content
			if catetory.articles && catetory.articles.length > 0
				each item in catetory.articles
					.article-content
						h4.article-title 
							a(href="/article/#{item._id}") !{item.title}
						img.article-img(src="#{item.img}")
						if item.summary
							article.article-summary !{item.summary}
						else 
							article.article-summary !{item.content.substring(0,40)}...
		form(method="GET")
			| ...
		.span12
			#page1
		.span12
			table.table.table-hover.table-striped
			| ...

	script(src="/js/index.js")